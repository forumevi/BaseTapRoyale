{
  "version": 2,
  "name": "base-tap-royale",
  "public": true,
  "builds": [
    { "src": "docs/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "redirects": [
    {
      "source": "/.well-known/farcaster.json",
      "destination": "https://api.farcaster.xyz/miniapps/hosted-manifest/019a20a7-a430-9da5-baad-3601c36125df",
      "permanent": false,
      "statusCode": 307
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/miniapp\\.json", "dest": "/docs/miniapp.json" },

    // ✅ Ana sayfa isteğini doğru yönlendir
    { "src": "/$", "dest": "/docs/index.html" },

    // ✅ Docs altındaki tüm dosyaları kapsa
    { "src": "/(.*)", "dest": "/docs/$1" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}

